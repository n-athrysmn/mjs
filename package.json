{
  "name": "mjaynsurreptitious",
  "version": "0.1.0",
  "private": true,
  "main": "main.js",
  "description": "mjaynsurreptitious is an AI-powered tarot card reader",
  "author": "Athira Kassim <athira.ysmn@gmail.com>",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "electron-dev": "NODE_ENV=development electron main.js",
    "electron": "electron main.js",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.athira.mjaynsurreptitious",
    "productName": "mjaynsurreptitious",
    "files": [
      "**/*",
      "!node_modules/.cache",
      "!src",
      "!*.log"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "mac": {
      "icon": "icon.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "icon.png",
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "icon": "assets/favicon.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "axios": "^1.10.0",
    "next": "15.3.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "autoprefixer": "^10.4.17",
    "electron": "^37.1.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "postcss": "^8.5.6",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^3.4.17",
    "tailwindcss-motion": "^1.1.1",
    "typescript": "^5"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
